
@{
    ViewData["Title"] = "Dodaj samochód";
}

<br />
@using (Html.BeginForm())
{
<div class="col-lg-12 col-md-12 col-sm-12">
    <div class="form-group">
        @Html.Label("Marka")
        @Html.TextBox("Car.Brand")
    </div>
    <div class="form-group">
        @Html.Label("Model")
        @Html.TextBox("Car.CarModel")
    </div>
    <div class="form-group">
        @Html.Label("Data produkcji")
        @Html.TextBox("Car.ProdDate")
    </div>
    <div class="form-group">
        @Html.Label("Koszt wynajmu")
        @Html.TextBox("Car.RentPrice")
    </div>
    <div class="form-group">
        @Html.Label("Kaucja")
        @Html.TextBox("Car.Bail")
    </div>
    <div class="form-group">
        @Html.Label("Liczba drzwi")
        @Html.TextBox("Car.Doors")
    </div>
    <div class="form-group">
        @Html.Label("Typ")
        @Html.TextBox("Car.Type")
    </div>
    <div class="form-group">
        @Html.Label("Pojemnosc")
        @Html.TextBox("Car.Capacity")
    </div>
    <div class="form-group">
        @Html.Label("Klimatyzacja")
        @Html.TextBox("Car.Clim")
    </div>
    <div class="form-group">
        @Html.Label("Nawigacja")
        @Html.TextBox("Car.Navi")
    </div>
    <div class="form-group">
        @Html.Label("Naped")
        @Html.TextBox("Car.DriveType")
    </div>
    <div class="form-group">
        @Html.Label("Tapicerka")
        @Html.TextBox("Car.Upholestry")
    </div>
    <div class="form-group">
        @Html.Label("Moc")
        @Html.TextBox("Car.Horsepower")
    </div>
    <div class="form-group">
        @Html.Label("Opis")
        @Html.TextBox("Car.Description")
    </div>
    </div>

        <input type="submit" value="Dodaj" class="btn btn-primary" />
        @Html.ActionLink("Wroc", "Index", (object)null, new { @class = "btn btn-danger" })
        }
