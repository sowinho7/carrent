@model CarRental.BLL.Entities.Customers
@{
    ViewData["Title"] = "Edytuj";
}
<br />

<div class="row">
    @using (Html.BeginForm())
    {
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="form-group">

            @Html.LabelFor(x => x.Name, "Imie", new { @class = "col-4" })
            @Html.TextBox("customer.Name", Model.Name, new { @Style = "background:#cccccc;" })
        </div>

        <div class="form-group">

            @Html.LabelFor(x => x.Surname, "Nazwisko", new { @class = "col-4" })
            @Html.TextBox("customer.Surname", Model.Surname, new { @Style = "background:#cccccc;" })


        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Country, "Narodowość", new { @class = "col-4" })
            @Html.TextBox("customer.Country", Model.Country, new { @Style = "background:#cccccc;" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.City, "Miasto", new { @class = "col-4" })
            @Html.TextBox("customer.City", Model.City, new { @Style = "background:#cccccc;" })

        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Address, "Adres", new { @class = "col-4" })
            @Html.TextBox("customer.Address", Model.Address, new { @Style = "background:#cccccc;" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.ZipCode, "Kod pocztowy", new { @class = "col-4" })
            @Html.TextBox("customer.ZipCode", Model.ZipCode, new { @Style = "background:#cccccc;" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.DocType, "Typ dokumentu", new { @class = "col-4" })
            @Html.TextBox("customer.DocType", Model.DocType, new { @Style = "background:#cccccc;" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.DocNo, "Numer dokumentu", new { @class = "col-4" })
            @Html.TextBox("customer.DocNo", Model.DocNo, new { @Style = "background:#cccccc;" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.CustCarBrand, "Marka samochodu", new { @class = "col-4" })
