            @Html.TextBox("customer.CustCarProdDate", Model.CustCarProdDate, new { @Style = "background:#cccccc;" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.CustCarCapacity, "Pojemność", new { @class = "col-4" })
            @Html.TextBox("customer.CustCarCapacity", Model.CustCarCapacity, new { @Style = "background:#cccccc;" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.CustCarHorsepower, "Moc", new { @class = "col-4" })
            @Html.TextBox("customer.CustCarHorsepower", Model.CustCarHorsepower, new { @Style = "background:#cccccc;" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.CustCarVin, "Numer VIN", new { @class = "col-4" })
